---
const currentYear = new Date().getFullYear();

const footerLinks = {
  game: {
    title: 'ゲーム情報',
    links: [
      { name: '公式サイト', href: 'https://www.fantasylife.jp/', external: true },
      { name: 'Nintendo Store', href: '#', external: true },
      { name: 'プレスリリース', href: '#', external: true },
    ],
  },
  site: {
    title: 'サイト情報',
    links: [
      { name: 'このサイトについて', href: '/about' },
      { name: 'プライバシーポリシー', href: '/privacy' },
      { name: '利用規約', href: '/terms' },
      { name: 'お問い合わせ', href: '/contact' },
    ],
  },
  social: {
    title: 'ソーシャル',
    links: [
      { name: 'Twitter', href: '#', icon: 'twitter', external: true },
      { name: 'YouTube', href: '#', icon: 'youtube', external: true },
      { name: 'Discord', href: '#', icon: 'discord', external: true },
    ],
  },
};
---

<footer class="bg-gray-100 dark:bg-background-dark-secondary mt-16">
  <div class="container-content">
    <!-- メインフッター -->
    <div class="py-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- サイト情報 -->
      <div class="space-y-4">
        <h3 class="font-display font-bold text-lg">ファンタジーライフi攻略Wiki</h3>
        <p class="text-sm text-text-secondary dark:text-text-secondary-dark">
          『グルグルの竜と時をぬすむ少女』の世界一詳しい攻略情報をお届けします。
        </p>
        <div class="flex space-x-4">
          {footerLinks.social.links.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 hover:text-primary-600 transition-colors"
              aria-label={link.name}
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                {link.icon === 'twitter' && (
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                )}
                {link.icon === 'youtube' && (
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                )}
                {link.icon === 'discord' && (
                  <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z" />
                )}
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- ゲーム情報 -->
      <div>
        <h4 class="font-bold mb-4">{footerLinks.game.title}</h4>
        <ul class="space-y-2">
          {footerLinks.game.links.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-text-secondary dark:text-text-secondary-dark hover:text-primary-600 transition-colors"
              >
                {link.name}
                {link.external && (
                  <svg class="inline-block w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- サイト情報 -->
      <div>
        <h4 class="font-bold mb-4">{footerLinks.site.title}</h4>
        <ul class="space-y-2">
          {footerLinks.site.links.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-text-secondary dark:text-text-secondary-dark hover:text-primary-600 transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- 人気記事 -->
      <div>
        <h4 class="font-bold mb-4">人気記事</h4>
        <ul class="space-y-2">
          <li>
            <a href="#" class="text-sm text-text-secondary dark:text-text-secondary-dark hover:text-primary-600 transition-colors">
              序盤の効率的な進め方
            </a>
          </li>
          <li>
            <a href="#" class="text-sm text-text-secondary dark:text-text-secondary-dark hover:text-primary-600 transition-colors">
              最強装備の入手方法
            </a>
          </li>
          <li>
            <a href="#" class="text-sm text-text-secondary dark:text-text-secondary-dark hover:text-primary-600 transition-colors">
              隠しボスの倒し方
            </a>
          </li>
          <li>
            <a href="#" class="text-sm text-text-secondary dark:text-text-secondary-dark hover:text-primary-600 transition-colors">
              全ライフマスターへの道
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- 著作権表示 -->
    <div class="border-t border-gray-200 dark:border-gray-700 py-6">
      <div class="text-center text-sm text-text-secondary dark:text-text-secondary-dark">
        <p>
          © {currentYear} ファンタジーライフi攻略Wiki. ゲーム内画像の著作権は
          <a href="#" class="underline hover:text-primary-600">株式会社レベルファイブ</a>
          に帰属します。
        </p>
        <p class="mt-2">
          当サイトは非公式の攻略サイトです。公式サイトではありません。
        </p>
      </div>
    </div>
  </div>
</footer>