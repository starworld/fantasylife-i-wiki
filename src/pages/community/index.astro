---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ImagePlaceholder from '@/components/ImagePlaceholder.astro';

const forumCategories = [
  { id: 'general', name: '総合雑談', icon: '💬', topics: 1234, posts: 15678 },
  { id: 'strategy', name: '攻略情報', icon: '📖', topics: 892, posts: 12456 },
  { id: 'trade', name: 'アイテム交換', icon: '🤝', topics: 567, posts: 8901 },
  { id: 'guild', name: 'ギルド募集', icon: '⚔️', topics: 234, posts: 3456 },
  { id: 'bug', name: 'バグ報告', icon: '🐛', topics: 123, posts: 789 },
];

const recentTopics = [
  {
    title: '【攻略】古龍を5分で倒す方法見つけた！',
    author: 'DragonSlayer',
    category: 'strategy',
    replies: 45,
    views: 1234,
    lastReply: '5分前',
  },
  {
    title: '初心者です。序盤のおすすめライフを教えてください',
    author: 'Newbie2024',
    category: 'general',
    replies: 23,
    views: 567,
    lastReply: '15分前',
  },
  {
    title: '【交換】虹色クリスタル⇔ミスリル鉱石×10',
    author: 'Trader_Pro',
    category: 'trade',
    replies: 8,
    views: 234,
    lastReply: '30分前',
  },
  {
    title: 'ギルド「月光騎士団」メンバー募集中！',
    author: 'GuildMaster',
    category: 'guild',
    replies: 12,
    views: 345,
    lastReply: '1時間前',
  },
];

const activeUsers = [
  { name: 'MasterCrafter', level: 60, status: 'online' },
  { name: 'HealerQueen', level: 55, status: 'online' },
  { name: 'SoloPlayer', level: 58, status: 'away' },
  { name: 'SpeedRunner', level: 60, status: 'online' },
  { name: 'CasualGamer', level: 42, status: 'online' },
];
---

<BaseLayout
  title="コミュニティ - ファンタジーライフi 攻略Wiki"
  description="プレイヤー同士の交流広場。攻略情報の共有、アイテム交換、ギルド募集など。"
  keywords={['コミュニティ', 'フォーラム', '掲示板', '交流', 'ギルド']}
>
  <!-- ヘッダー -->
  <section class="bg-gradient-to-r from-purple-600 to-pink-600 text-white py-12">
    <div class="container-content">
      <h1 class="text-4xl font-display font-bold mb-4">コミュニティ</h1>
      <p class="text-xl">プレイヤー同士で情報交換・交流しよう！</p>
    </div>
  </section>

  <!-- コミュニティ統計 -->
  <section class="py-8 bg-gray-50 dark:bg-background-dark-secondary">
    <div class="container-content">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="card text-center">
          <div class="text-3xl font-bold text-primary-600">24,567</div>
          <div class="text-sm text-text-secondary dark:text-text-secondary-dark">登録ユーザー</div>
        </div>
        <div class="card text-center">
          <div class="text-3xl font-bold text-secondary-600">3,456</div>
          <div class="text-sm text-text-secondary dark:text-text-secondary-dark">トピック総数</div>
        </div>
        <div class="card text-center">
          <div class="text-3xl font-bold text-accent-600">45,678</div>
          <div class="text-sm text-text-secondary dark:text-text-secondary-dark">投稿総数</div>
        </div>
        <div class="card text-center">
          <div class="text-3xl font-bold text-purple-600">234</div>
          <div class="text-sm text-text-secondary dark:text-text-secondary-dark">オンライン</div>
        </div>
      </div>
    </div>
  </section>

  <!-- メインコンテンツ -->
  <section class="py-12">
    <div class="container-content">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- フォーラムカテゴリー -->
        <div class="lg:col-span-2">
          <h2 class="text-2xl font-display font-bold mb-6">フォーラムカテゴリー</h2>
          
          <div class="space-y-4">
            {forumCategories.map((category) => (
              <a
                href={`/community/forum/${category.id}`}
                class="card flex items-center justify-between hover:shadow-lg transition-shadow"
              >
                <div class="flex items-center space-x-4">
                  <div class="text-3xl">{category.icon}</div>
                  <div>
                    <h3 class="font-bold text-lg hover:text-primary-600 transition-colors">
                      {category.name}
                    </h3>
                    <div class="text-sm text-text-secondary dark:text-text-secondary-dark">
                      トピック: {category.topics} / 投稿: {category.posts}
                    </div>
                  </div>
                </div>
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            ))}
          </div>

          <!-- 新規トピック作成ボタン -->
          <div class="mt-6 text-center">
            <a
              href="/community/new-topic"
              class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              新規トピック作成
            </a>
          </div>
        </div>

        <!-- サイドバー -->
        <aside class="space-y-6">
          <!-- オンラインユーザー -->
          <div class="card">
            <h3 class="font-bold mb-4 flex items-center">
              <span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></span>
              オンラインユーザー
            </h3>
            <div class="space-y-2">
              {activeUsers.map((user) => (
                <div class="flex items-center justify-between text-sm">
                  <div class="flex items-center space-x-2">
                    <ImagePlaceholder
                      width={24}
                      height={24}
                      type="avatar"
                      className="rounded-full"
                      text=""
                    />
                    <a href={`/community/users/${user.name}`} class="hover:text-primary-600 transition-colors">
                      {user.name}
                    </a>
                  </div>
                  <span class="text-xs text-text-secondary dark:text-text-secondary-dark">
                    Lv.{user.level}
                  </span>
                </div>
              ))}
            </div>
            <div class="mt-3 text-center">
              <a href="/community/users" class="text-sm text-primary-600 hover:text-primary-700">
                全てのユーザーを見る →
              </a>
            </div>
          </div>

          <!-- 人気タグ -->
          <div class="card">
            <h3 class="font-bold mb-4">人気のタグ</h3>
            <div class="flex flex-wrap gap-2">
              <a href="/community/tags/初心者" class="tag tag-primary text-xs">#初心者</a>
              <a href="/community/tags/攻略" class="tag tag-secondary text-xs">#攻略</a>
              <a href="/community/tags/最強装備" class="tag tag-accent text-xs">#最強装備</a>
              <a href="/community/tags/金策" class="tag tag-primary text-xs">#金策</a>
              <a href="/community/tags/イベント" class="tag tag-secondary text-xs">#イベント</a>
              <a href="/community/tags/バグ" class="tag tag-accent text-xs">#バグ</a>
            </div>
          </div>

          <!-- コミュニティルール -->
          <div class="card bg-yellow-50 dark:bg-yellow-900/20 border-l-4 border-yellow-500">
            <h3 class="font-bold mb-2">コミュニティガイドライン</h3>
            <ul class="text-sm space-y-1 text-text-secondary dark:text-text-secondary-dark">
              <li>• 他のプレイヤーを尊重しよう</li>
              <li>• スパムや荒らし行為は禁止</li>
              <li>• ネタバレにはタグを付けよう</li>
              <li>• 個人情報の投稿は控えよう</li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- 最新トピック -->
  <section class="py-12 bg-gray-50 dark:bg-background-dark-secondary">
    <div class="container-content">
      <h2 class="text-2xl font-display font-bold mb-6">最新のトピック</h2>
      
      <div class="overflow-x-auto">
        <table class="w-full bg-white dark:bg-background-dark rounded-lg shadow-sm">
          <thead>
            <tr class="border-b border-gray-200 dark:border-gray-700">
              <th class="text-left px-4 py-3 font-medium">トピック</th>
              <th class="text-left px-4 py-3 font-medium">カテゴリー</th>
              <th class="text-center px-4 py-3 font-medium">返信</th>
              <th class="text-center px-4 py-3 font-medium">閲覧</th>
              <th class="text-left px-4 py-3 font-medium">最終投稿</th>
            </tr>
          </thead>
          <tbody>
            {recentTopics.map((topic, index) => (
              <tr class={`
                border-b border-gray-100 dark:border-gray-800
                hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors
                ${index % 2 === 0 ? '' : 'bg-gray-50/50 dark:bg-gray-900/50'}
              `}>
                <td class="px-4 py-3">
                  <a href={`/community/topics/${topic.title}`} class="hover:text-primary-600 transition-colors">
                    <div class="font-medium">{topic.title}</div>
                    <div class="text-sm text-text-secondary dark:text-text-secondary-dark">
                      by {topic.author}
                    </div>
                  </a>
                </td>
                <td class="px-4 py-3">
                  <span class="tag tag-primary text-xs">
                    {forumCategories.find(c => c.id === topic.category)?.name}
                  </span>
                </td>
                <td class="px-4 py-3 text-center">{topic.replies}</td>
                <td class="px-4 py-3 text-center">{topic.views}</td>
                <td class="px-4 py-3 text-sm text-text-secondary dark:text-text-secondary-dark">
                  {topic.lastReply}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      <div class="mt-6 text-center">
        <a href="/community/topics" class="text-primary-600 hover:text-primary-700 transition-colors">
          全てのトピックを見る →
        </a>
      </div>
    </div>
  </section>

  <!-- Discord連携 -->
  <section class="py-12">
    <div class="container-content">
      <div class="card bg-indigo-50 dark:bg-indigo-900/20 text-center py-8">
        <div class="text-4xl mb-4">💬</div>
        <h2 class="text-2xl font-display font-bold mb-4">公式Discordサーバー</h2>
        <p class="text-text-secondary dark:text-text-secondary-dark mb-6 max-w-2xl mx-auto">
          リアルタイムでチャットしたい方はDiscordサーバーへ！<br>
          ボイスチャットでパーティメンバーと連携プレイも可能です。
        </p>
        <a
          href="https://discord.gg/fantasylife"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
          </svg>
          Discordに参加する
        </a>
        <div class="mt-4 text-sm text-text-secondary dark:text-text-secondary-dark">
          現在のメンバー数: 5,234人
        </div>
      </div>
    </div>
  </section>
</BaseLayout>